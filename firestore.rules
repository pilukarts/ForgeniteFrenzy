rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // By default, deny all reads and writes
    match /{document=**} {
      allow read, write: if false;
    }

    // Allow players to read and write to their own document
    // This requires that you use Firebase Authentication and that the player's
    // document ID in the 'players' collection matches their user ID (uid).
    match /players/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    // For development, you might use more open rules.
    // WARNING: Do not use these rules in production.
    // match /players/{userId} {
    //   allow read, write: if true;
    // }
  }
}
